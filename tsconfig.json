{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "outDir": ".tsbuild"
  },
  "awesomeTypescriptLoaderOptions": {
    "doTypeCheck": true,
    "forkChecker": true,
    "useBabel": true,
    "useCache": true,
    "babelOptions": {
      "presets": ["es2015-loose-native-modules"]
    }
  },
  "exclude": [
    "node_modules",
    ".awcache",
    ".git",
    ".tsbuild",
    ".vdcode",
    "dist",
    "webpack.config.js"
  ]
}
